<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <com.parse.ParseImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_below="@id/tvUsername"

        android:background="@drawable/border"

        android:layout_height="364dp"/>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tlProfPic"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Username"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivCommentbar"
        android:fontFamily="serif"
        android:text="Caption"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tvCaption"
        android:fontFamily="serif"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivCommentbar"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ivImage"
        android:layout_toEndOf="@+id/ivLikebar"
        android:padding="5dp"
        android:src="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivSendbar"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ivImage"
        android:layout_toEndOf="@+id/ivCommentbar"
        android:padding="5dp"
        android:src="@drawable/direct" />

    <ImageView
        android:id="@+id/ivBookmark"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivImage"
        android:padding="5dp"
        android:src="@drawable/ufi_save" />

    <ImageView
        android:id="@+id/ivLikebar"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_below="@id/ivImage"
        android:src="@drawable/ufi_heart"
        android:padding="5dp" />



    <android.support.v7.widget.CardView
        android:layout_width="40dp"
        android:layout_height= "40dp"
        android:elevation="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/tlProfPic"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="22dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/tlProfiv"
            android:background="@color/black_5_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/profile_selector" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/ivOptionbar"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_above="@id/ivImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"

        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/media_option_button" />
</RelativeLayout>