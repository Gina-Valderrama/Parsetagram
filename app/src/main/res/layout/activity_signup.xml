<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etSUUsernameLayout"
        android:layout_marginTop="10dp"
        android:layout_above="@id/etSUPasswordLayout"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etSignupUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:inputType="textMultiLine" />


    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/etSUPasswordLayout"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etEmailLayout"
        app:hintAnimationEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etSignupPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etEmailLayout"
        android:layout_marginTop="10dp"

        android:layout_width="300dp"
        android:layout_above="@+id/btnCreateAccount"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etSignupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textMultiLine" />


    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="20dp"
        android:background="?attr/colorAccent"
        android:text="@string/create_account"
        android:textColor="@android:color/white"
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/ivInstaLogosignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/nav_logo_whiteout" />


    <android.support.v7.widget.CardView
        android:layout_width="90dp"
        android:layout_height= "90dp"

        android:elevation="15dp"
        android:layout_above="@+id/etSUUsernameLayout"
        android:id="@+id/view2"
        app:cardCornerRadius="45dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/ivProfilesignup"
            android:background="@color/black_5_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/profile_selector"
            android:onClick= "profLaunchGallery"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>